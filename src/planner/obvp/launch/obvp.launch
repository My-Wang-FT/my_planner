<launch>
  <include file="$(find obvp)/launch/rviz.launch" />

  <!-- size of map, change the size inflate x, y, z according to your application -->
  <arg name="map_size_x" value="10.0"/>
  <arg name="map_size_y" value="10.0"/>
  <arg name="map_size_z" value=" 3.0"/>

  <!-- topic of your odometry such as VIO or LIO -->
  <arg name="odom_topic" value="/visual_slam/odom" />

  <!-- use simulator -->
  <include file="$(find traj_server)/launch/my_sim.xml">
    <arg name="map_size_x_" value="$(arg map_size_x)"/>
    <arg name="map_size_y_" value="$(arg map_size_y)"/>
    <arg name="map_size_z_" value="$(arg map_size_z)"/>
    <arg name="c_num" value="200"/>
    <arg name="p_num" value="200"/>
    <arg name="min_dist" value="1.2"/>

    <arg name="odometry_topic" value="$(arg odom_topic)" />
  </include>

  <!-- my test node -->

  <!-- <node pkg="obvp" name="position_cmd_test" type="position_cmd_test">
    <param name="DistanceThreshold" value="0.3" />
    <param name="Control_Distance_Threshold" value="0.2" />
    <param name="SPEED" value="0.8" />
    <param name="wait_time" value="3.0" />
    <param name="ACC_max" value="0.1" />
    <param name="dt" value="0.05" />
  </node> -->

  <node pkg="my_visualization" name="obvp_visual" type="obvp_visual" output="screen">
    <remap from="/goal_point1" to="/planning/goal_cmd" />
    <remap from="/goal_point2" to="/rviz/3d_nav_goal" />
    <remap from="/position_cmd" to="/planning/pos_cmd" />
    <remap from="/traj_pts" to="/planning/traj_pts" />
    <remap from="/odometry" to="$(arg odom_topic)" />
  </node>

  <node pkg="obvp" name="poly_traj_generator" type="poly_traj_generator" output="screen">
    <remap from="/position_cmd" to="/planning/pos_cmd" />
    <remap from="/goal_point1" to="/planning/goal_cmd" />
    <remap from="/goal_point2" to="/rviz/3d_nav_goal" />
    <remap from="/odometry_topic" to="$(arg odom_topic)" />
  </node>

  <node pkg="traj_server" name="my_traj_server" type="my_traj_server" output="screen">
    <remap from="/position_cmd" to="/planning/pos_cmd" />
    <remap from="/poly_coefs" to="/planning/poly_coefs" />
    <remap from="/traj_pts" to="/planning/traj_pts" />
  </node>

</launch>